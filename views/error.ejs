<!-- views/error.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Error - Seed Swap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <h1>Error</h1>
    <p><%= message %></p>

    <% if (error && Object.keys(error).length > 0 && env !== 'production') { %>
    <pre><%= error.stack %></pre>
    <% } %>

    <p><a href="/">Return to Home</a></p>
  </body>
</html>
