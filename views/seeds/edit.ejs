<!-- views/seeds/edit.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Edit Seed Listing - Seed Swap</title>
  </head>
  <body>
    <h1>Edit Seed Listing</h1>
    <% if (typeof error !== 'undefined' && error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>
    <form
      action="/seeds/edit/<%= seed._id %>"
      method="POST"
      enctype="multipart/form-data"
    >
      <label>Plant Type:</label><br />
      <input
        type="text"
        name="plantType"
        value="<%= seed.plantType %>"
        required
      /><br />

      <label>Variety Name:</label><br />
      <input
        type="text"
        name="varietyName"
        value="<%= seed.varietyName %>"
        required
      /><br />

      <label>Variety Description:</label><br />
      <textarea name="varietyDescription">
<%= seed.varietyDescription %></textarea
      ><br />

      <label>Image:</label><br />
      <% if (seed.image) { %>
      <img src="<%= seed.image %>" alt="Seed Image" width="100" /><br />
      <% } %>
      <input type="file" name="image" /><br />

      <button type="submit">Update Listing</button>
    </form>

    <p><a href="/seeds/mine">Back to Your Listings</a></p>
  </body>
</html>
