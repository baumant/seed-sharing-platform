<!-- views/seeds/new.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>New Seed Listing - Seed Swap</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <h1>Create a New Seed Listing</h1>
    <% if (typeof error !== 'undefined') { %>
    <p style="color: red"><%= error %></p>
    <% } %>
    <form action="/seeds/new" method="POST" enctype="multipart/form-data">
      <label>Plant Type:</label><br />
      <input type="text" name="plantType" required /><br />

      <label>Variety Name:</label><br />
      <input type="text" name="varietyName" required /><br />

      <label>Variety Description & Source History:</label><br />
      <textarea name="varietyDescription"></textarea><br />

      <label>Image:</label><br />
      <input type="file" name="image" /><br />

      <button type="submit">Create Listing</button>
    </form>

    <p><a href="/dashboard">Back to Dashboard</a></p>
  </body>
</html>
